
{% set i=0 %}

<table class="table">
    <thead class="thead-dark">
    <tr>
        <th scope="col">#</th>
        <th scope="col">Nom</th>
        <th scope="col">Titre</th>
        <th scope="col">Date</th>
    </tr>
    </thead>
    <tbody>
    {% for recherche in recherches %}
        {%  set i =  i+1 %}
    <tr>
        <th scope="row">{{ i }} </th>
        <td>{{ recherche.getMot() }}</td>
        <td>{{ recherche.getTitreType() }}</td>
        <td>{{ recherche.getDate() }}</td>
    </tr>
    {% endfor %}
    </tbody>
</table>
<div style="margin-top: 2rem">
    {{ knp_pagination_render(recherches) }}
</div>


