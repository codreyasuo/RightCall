{% extends 'base.html.twig' %}

{% block content %}

    <div class="jumbotron txt-center">
        <h1>Inscrption sur le site</h1>
    </div>
    <div class="container">
        {{ form_start(form) }}
            {{ form_row(form.username, {'label': 'Nom d\'utilisateur', 'attr':
                { 'placeholder': 'Nom d\'utilisateur ...' }}) }}
            {{ form_row(form.email, {'label': 'Adresse email', 'attr':
                { 'placeholder': 'Adresse email ...' }}) }}
            {{ form_row(form.password, {'label': 'Mot de Passe', 'attr':
                { 'placeholder': 'Mot de passe ...' }}) }}
            {{ form_row(form.confirm_password, {'label': 'Confirmation du mot de passe', 'attr':
                { 'placeholder': 'Confirmez le Mot de Passe ...' }}) }}
        <button type="submit" class="btn btn-success">Insciption !</button>
        {{ form_end(form) }}
    </div>


{% endblock %}